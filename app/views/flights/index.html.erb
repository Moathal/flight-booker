<h1>Flights#index</h1>
<p>Find me in app/views/flights/index.html.erb</p>

<%= form_with(url: {controller: "flights", action: "search"}, method: :get) do |f| %>
  <%= f.label :departure_airport_id, 'Departure Airport' %>
  <%= f.select :departure_airport_id, @airports %>
  <%= f.label :arrival_airport_id, 'Arrival Airport' %>
  <%= f.select :arrival_airport_id, @airports %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.submit 'Search' %>
<% end %>