<div , style="width: 45%" class="d-flex flex-column align-items-center">

<h2>Registeration form</h2>
<div style="min-width: 100%" class="card p-3 d-flex flex-column align-items-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "d-flex flex-column gap-1"}, style:"min-width: 100%") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="d-flex gap-2 align-items-between">
   <div class="field">
    <%= f.label :fullname, "Full name" %><br />
    <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname" %>
  </div>

  <div class="field">
    <%= f.label :birthday, "Birthday" %><br />
    <%= f.date_field :birthday %>
  </div>
  </div>
 

  <div style="min-width: 75%;">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"min-width: 100%;" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", style:"min-width: 100%;" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style:"min-width: 100%;" %>
  </div>
  </div>


  <div class="actions">
    <%= f.submit "Sign up", style: "width: 45%",class: "button text-primary bg-light rounded border-1 my-2" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
</div>